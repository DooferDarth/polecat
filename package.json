{
    "name": "polecat",
    "description": "A simple browser-based text RP server/client.",
    "version": "0.2.0",
    "homepage": "",
    "private": true,
    "main": "src",
    "keywords": [
        "feathers"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/chaos7theory/polecat.git"
    },
    "author": {
        "name": "Christopher Philabaum",
        "email": "christopher@philabaum.me",
        "url": "https://philabaum.me"
    },
    "contributors": [],
    "bugs": {
        "url": "https://github.com/chaos7theory/polecat/issues"
    },
    "directories": {
        "lib": "src",
        "test": "test/",
        "config": "config/"
    },
    "engines": {
        "node": "^15.0.0",
        "npm": ">= 3.0.0"
    },
    "scripts": {
        "test": "npm run lint && npm run compile && npm run coverage",
        "lint": "eslint src/. test/. --config .eslintrc.json --ext .ts --fix",
        "dev": "ts-node-dev --no-notify src/",
        "start": "npm run compile && node lib/",
        "clean": "rimraf test/data/",
        "coverage": "nyc npm run mocha",
        "mocha": "npm run clean && cross-env NODE_ENV=test ts-mocha \"test/**/*.ts\" --recursive --exit",
        "compile": "rimraf lib/ && tsc"
    },
    "standard": {
        "env": [
            "mocha"
        ],
        "ignore": []
    },
    "types": "lib/",
    "dependencies": {
        "@feathersjs/authentication": "^4.5.11",
        "@feathersjs/authentication-local": "^4.5.11",
        "@feathersjs/authentication-oauth": "^4.5.11",
        "@feathersjs/configuration": "^4.5.11",
        "@feathersjs/errors": "^4.5.11",
        "@feathersjs/express": "^4.5.11",
        "@feathersjs/feathers": "^4.5.11",
        "@feathersjs/socketio": "^4.5.11",
        "@feathersjs/transport-commons": "^4.5.11",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "feathers-nedb": "^5.1.0",
        "helmet": "^4.4.1",
        "jwt-decode": "^3.1.2",
        "nedb": "^1.8.0",
        "serve-favicon": "^2.5.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.10",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/mocha": "^8.2.2",
        "@types/nedb": "^1.8.11",
        "@types/serve-favicon": "^2.5.2",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/parser": "^4.18.0",
        "axios": "^0.21.1",
        "cross-env": "^7.0.3",
        "eslint": "^7.22.0",
        "mocha": "^8.3.2",
        "rimraf": "^3.0.2",
        "ts-mocha": "^8.0.0",
        "ts-node-dev": "^1.1.6",
        "typescript": "^4.2.3"
    }
}
